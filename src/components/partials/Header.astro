---
import biblesortLogo from '@assets/biblesort-logo.svg';
---
<header class="flex justify-between items-center gap-2 py-4 md:py-6 xl:py-8">
    <a href="/"><img src={biblesortLogo.src} alt="Bible Sort Logo" class="w-40 sm:w-44 xl:w-48" /></a>

    <nav class="flex md:gap-6 lg:gap-8 xl:gap-12">
        <a class="text-xl hidden lg:block lg:text-xl font-medium text-gold" href="/">Inicio</a>
        <a class="text-xl hidden lg:block lg:text-xl" href="/bible">Libros de la Biblia</a>
        <a class="text-xl hidden lg:block lg:text-xl" href="/scoreboard">Tabla de Posiciones</a>
        <a class="text-xl hidden lg:block lg:text-xl" href="/contact">Contacto</a> 
    </nav>
    <a class="text-xl sm:text-2xl md:text-3xl bg-black pt-1 md:py-3 pb-2 md:pb-4 px-10 md:px-20 text-white" href="/game">Jugar</a>
</header>

<script>
    //if the current page is the home page, change the color of the home link to gold
    if (window.location.pathname === '/') {
        document.querySelector('a[href="/"]')?.classList.add('text-gold');
    }
</script>
